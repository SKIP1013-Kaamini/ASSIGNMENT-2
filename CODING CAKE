		System.out.println("#########################################################################################################################");
		}
		
		else if (type_pack == 2) {
		System.out.println("\n\n#####################################################################");
		System.out.println("\t\t Packaging for Category 2: Special Cupcake");
		System.out.println("#####################################################################");
		System.out.println(" Type  \t\tHeight/code \tMaterial Used [code] \tPrice (RM)"); //2.2.2.4.4tab //
