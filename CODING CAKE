			}
			
			else if(ans_service == 3) {
				System.out.print("\n\n\t\t####################################################################################################################");
				System.out.println("\n\t\t\t\t\t\t\tCategory 3: Special Slice");
				System.out.println("\t\t####################################################################################################################");
				System.out.println("\n\t\t Size(inch) [code] \tShape (kg) \tHeight(inch) \tType [code] \tName [code] \t\t\tPrice (RM)"); //2.2.2.4.4tab //
				
				System.out.println("\n\t\t\t\t\t\t\t\t\t\t\tBurnt Cheese[3] \t\t    10");
				System.out.println("\t\t\t\t\t\t\t\t\t\t\tRed velvet[4] \t\t\t    10");
				System.out.println("\t\t       2[0]\t\tTriangular\t     5       \t Baked[10]\tRainbow[15] \t\t\t    10");
				System.out.println("\t\t\t\t\t\t\t\t\t\t\tCreamy Vanila Fruit Cake[6] \t    10");
				System.out.println("\t\t\t\t\t\t\t\t\t\t\tChocolate Truffle Cream Cake[13]    10");
				System.out.println("\t\t\t\t\t\t\t\t\t\t\tClassic Almond Cake[14] \t    10");

				System.out.println("\n\t\t#####################################################################################################################");
				System.out.println("\t\t#####################################################################################################################");
				
			}
			
			else{
				System.out.print("Error");
				System.exit(0);
			}
	
		}
}		
	 //part3: instruction that ask customer to choose their cake
	System.out.print("\n\tFor the first 3 questions below, Please state the CODE : ");
	System.out.print("\n\tWhich size do you want? : ");
	ans_size1=sc.nextDouble();
	System.out.print("\tWhat is the name of cake that you want to order? : ");
	ans_code1=sc.nextDouble();
	System.out.print("\tWhat type of cake do you prefer? : ");
	ans_type1=sc.nextDouble();
	System.out.print("\tHow many cakes do you want?: ");
	ans_no1=sc.nextInt(); 
		
	
		
		//part 4: menu of packaging material    //for method sama dgn yg ats nnti..
		System.out.print("\n\n\t 1. Special Choose \n\t 2. Special Slice \n\t 3. Special Cupcake \n"); 
		System.out.print("\n\tChoose the type of packaging, based on the service you choose: "); //if using sc.next()..jangan selang
		type_pack=sc.nextInt();
		
		if (type_pack == 1) {
		
		System.out.println("####################################################################################################################");
		System.out.println("\t\t\t\tPackaging for Category 1: Special Choose");
		System.out.println("####################################################################################################################");
		System.out.println(" Type \t\tHeight(inch)/Shape [code] \tDecoration colour/colour \tMaterial Used [code] \tPrice (RM)"); //2.2.2.4.4tab //
		System.out.println("\n\t \t\t      \t\t\t\tWhite \t\t\t  Glass]46] \t\t    184");
		System.out.println("\t\t\t4[4]    \t\t\tSilver\t\t\t  Clay[35] \t\t    140");
		System.out.println("\t\t\t\t\t\t\tGold \t\t\t  Wood[35] \t\t    44");
