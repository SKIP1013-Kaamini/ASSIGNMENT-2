		System.out.println("Box_of_\t\t  3[1]\t\tBagasse Paper[3] \t    3");
		System.out.println("6_cups\t\t\t\tShop's container[8] \t    8");
		System.out.println("\t\t\t\tContainer[0] \t\t    0");
